@model EmptyViewModel

@{
	string title = "Tree View";
	Model.PageLabel = title;
}

@section breadcrumb_items{
	<li><span>Static</span></li>
	<li><span>UI Elements</span></li>
	<li><span>Tree View</span></li>
}

@section page_styles{
	<link rel="stylesheet" href="~/assets/vendor/jstree/themes/default/style.css" />
}

@section page_scripts{
	<script src="~/assets/vendor/jstree/jstree.js"></script>
}

@section page_scripts_init{
	<script src="~/Scripts/Static/uielements.treeview.js"></script>
}

@Html.Partial("~/Views/Static/TopAlert.cshtml")

<div class="row">
	<div class="col-md-6">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
				</div>

				<h2 class="panel-title">Basic</h2>
				<p class="panel-subtitle">Interactive tree, basic sample.</p>
			</header>
			<div class="panel-body">
				<div id="treeBasic">
					<ul>
						<li>
							Root Node
							<ul>
								<li data-jstree='{ "selected" : true }'>
									<a href="#">Selected Node</a>
								</li>
								<li data-jstree='{ "opened" : true }'>
									Opened Node
									<ul>
										<li data-jstree='{ "disabled" : true }'>
											Disabled Node
										</li>
										<li data-jstree='{ "type" : "file" }'>
											Child Node
										</li>
									</ul>
								</li>
								<li data-jstree='{ "icon" : "fa fa-picture-o" }'>
									Custom Icon
								</li>
								<li data-jstree='{ "icon" : "/contents/favicon-16x16.png" }'>
									Custom Icon Image
								</li>
							</ul>
						</li>
						<li class="colored">
							Colored
						</li>
						<li class="colored-icon">
							Colored Icon Only
						</li>
						<li class="folder">
							Folder Style
						</li>
					</ul>
				</div>
			</div>
		</section>
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
				</div>

				<h2 class="panel-title">Ajax</h2>
				<p class="panel-subtitle">You can also use AJAX to populate the tree with HTML your server returns.</p>
			</header>
			<div class="panel-body">
				<div class="col-md-6">
					<h5 class="text-weight-semibold text-dark text-uppercase">HTML</h5>
					<div id="treeAjaxHTML" data-source-url="@Url.Action("DataTreeViewNodesHtml", "Static")"></div>
				</div>
				<div class="col-md-6">
					<h5 class="text-weight-semibold text-dark text-uppercase">JSON</h5>
					<div id="treeAjaxJSON" data-source-url-roots="@Url.Action("DataTreeViewNodesJsonRoots", "Static")" data-source-url-children="@Url.Action("DataTreeViewNodesJsonChildren", "Static")"></div>
				</div>
			</div>
		</section>
	</div>
	<div class="col-md-6">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
				</div>

				<h2 class="panel-title">Checkbox</h2>
				<p class="panel-subtitle">Checkbox icons in front of each node.</p>
			</header>
			<div class="panel-body">
				<div id="treeCheckbox">
					<ul>
						<li>
							Root Node
							<ul>
								<li data-jstree='{ "selected" : true }'>
									<a href="#">Selected Node</a>
								</li>
								<li data-jstree='{ "opened" : true }'>
									Opened Node
									<ul>
										<li data-jstree='{ "disabled" : true }'>
											Disabled Node
										</li>
										<li data-jstree='{ "type" : "file" }'>
											Child Node
										</li>
									</ul>
								</li>
								<li data-jstree='{ "icon" : "fa fa-picture-o" }'>
									Custom Icon
								</li>
								<li data-jstree='{ "icon" : "/contents/favicon-16x16.png" }'>
									Custom Icon Image
								</li>
							</ul>
						</li>
						<li class="colored">
							Colored
						</li>
						<li class="colored-icon">
							Colored Icon Only
						</li>
						<li class="folder">
							Folder Style
						</li>
					</ul>
				</div>
			</div>
		</section>
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
				</div>

				<h2 class="panel-title">Drag &amp; Drop</h2>
				<p class="panel-subtitle">Makes it possible to drag and drop tree nodes and rearrange the tree.</p>
			</header>
			<div class="panel-body">
				<div id="treeDragDrop">
					<ul>
						<li>
							Root Node
							<ul>
								<li data-jstree='{ "selected" : true }'>
									<a href="#">Selected Node</a>
								</li>
								<li data-jstree='{ "opened" : true }'>
									Opened Node
									<ul>
										<li data-jstree='{ "type" : "file" }'>
											Child Node
										</li>
										<li data-jstree='{ "type" : "file" }'>
											Child Node 2
										</li>
										<li data-jstree='{ "type" : "file" }'>
											Child Node 3
										</li>
									</ul>
								</li>
							</ul>
						</li>
						<li>
							Root Node 2
						</li>
					</ul>
				</div>
			</div>
		</section>
	</div>
</div>
