@model BaseViewModel

<!-- Meta -->

@{
	Layout = "~/Views/_Layout.cshtml";
}

<!-- Page Sections -->

@section page_styles {

	@RenderSection("page_styles", required: false)

}

@section page_scripts {

	@RenderSection("page_scripts", required: false)

}

@section page_scripts_init {

	@RenderSection("page_scripts_init", required: false)

}

<!-- Page Contents -->

<section class="body-sign">

	<div class="center-sign">

		<a href="@Url.Action(nameof(HomeController.Index), nameof(HomeController).RemoveControllerSuffix())" class="logo logo-user pull-left">
			<img src="@Url.Content("~/contents/logo.png")" height="54" alt="@WebUIResources.DefaultPageTile" />
		</a>

		@RenderBody()

		<p class="text-center text-muted mt-md mb-md">&copy; @WebUIResources.Copyright</p>

	</div>

</section>
