@model LocationViewModel

@{ 
	var item = Model;
}

<li>
	<p class="result-type">
		<span class="label label-warning">@SearchResources.LocationItemLabel</span>
	</p>
	<a href="@Url.Action(nameof(LocationsController.Edit), nameof(LocationsController).RemoveControllerSuffix(), new { @id = item.Id })" class="has-thumb">
		<div class="row">
			<div class="col-md-12">
				<div class="result-thumb pull-left">
					@if (item.ImageBlobId.HasValue)
					{
						<img class="img-thumbnail" src="@Url.Image(item.ImageBlobName, item.Name, 75, 75)" alt="@item.Name" />
					}
					else
					{
						<i class="fa fa-building"></i>
					}
				</div>
				<p class="h3 title text-primary">@item.Name</p>
				<p class="description">@item.Notes.WhenNullOrWhiteSpace(SearchResources.SearchEmptyDescriptionMessage).</p>
			</div>
		</div>
	</a>
</li>
