@model EmptyViewModel

@{
	string title = "Progress";
	Model.PageLabel = title;
}

@section breadcrumb_items{
	<li><span>Static</span></li>
	<li><span>UI Elements</span></li>
	<li><span>Loading</span></li>
	<li><span>Progress</span></li>
}

@section page_scripts_init{
	<script src="~/Scripts/Static/uielements.loading.progress.js"></script>
}

@Html.Partial("~/Views/Static/TopAlert.cshtml")

<h3 class="mt-none">Loading Progress</h3>
<p class="mb-lg">Loading progress is a progress bar that can be changed via Javascript.</p>

<div class="row">
	<div class="col-md-12">
		<section class="panel">
			<header class="panel-heading">
				<div class="panel-actions">
					<a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
					<a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
				</div>

				<h2 class="panel-title">Examples of Usage</h2>
			</header>
			<div class="panel-body">
				<div class="row">
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-6">
								<button id="NPStart" class="btn btn-primary btn-block mt-sm">Start</button>
							</div>
							<div class="col-md-6">
								<h5 class="text-weight-semibold text-dark text-uppercase mb-none">Start the Bar</h5>
								<code>
									NProgress.start();
								</code>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-6">
								<button id="NPStart" class="btn btn-primary btn-block mt-sm">Increment</button>
							</div>
							<div class="col-md-6">
								<h5 class="text-weight-semibold text-dark text-uppercase mb-none">Increment a little bit</h5>
								<code>
									NProgress.inc();
								</code>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt-md">
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-6">
								<button id="NPStart" class="btn btn-primary btn-block mt-sm">0% to 100%</button>
							</div>
							<div class="col-md-6">
								<h5 class="text-weight-semibold text-dark text-uppercase mb-none">From 0% to 100%</h5>
								<code>
									NProgress.done(true);
								</code>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-6">
								<button id="NPStart" class="btn btn-primary btn-block mt-sm">Stop</button>
							</div>
							<div class="col-md-6">
								<h5 class="text-weight-semibold text-dark text-uppercase mb-none">Stop the Bar</h5>
								<code>
									NProgress.done();
								</code>
							</div>
						</div>
					</div>
				</div>

				<hr>

				<div class="row mt-md">
					<div class="col-md-9">
						<button data-np-set="10" class="btn btn-primary mt-sm">Set to 10</button>
						<button data-np-set="20" class="btn btn-primary mt-sm">Set to 20</button>
						<button data-np-set="30" class="btn btn-primary mt-sm">Set to 30</button>
						<button data-np-set="40" class="btn btn-primary mt-sm">Set to 40</button>
						<button data-np-set="50" class="btn btn-primary mt-sm">Set to 50</button>
						<button data-np-set="60" class="btn btn-primary mt-sm">Set to 60</button>
						<button data-np-set="70" class="btn btn-primary mt-sm">Set to 70</button>
						<button data-np-set="80" class="btn btn-primary mt-sm">Set to 80</button>
						<button data-np-set="90" class="btn btn-primary mt-sm">Set to 90</button>
					</div>
					<div class="col-md-3">
						<h5 class="text-weight-semibold text-dark text-uppercase mb-none">Set Percentual</h5>
						<code>
							NProgress.set( PERCENTUAL / 100 );
						</code>
					</div>
				</div>

				<hr>

				<div class="row mt-md">
					<div class="col-md-12">
						<div class="row">
							<div class="col-md-3">
								<button id="NPCallbacks" class="btn btn-primary btn-block mt-sm">Go</button>
							</div>
							<div class="col-md-9">
								<h5 class="text-weight-semibold text-dark text-uppercase">Set to 50 and use callbacks</h5>
								<code>
									NProgress.set( 0.5, {
									<br />
									&nbsp;&nbsp;&nbsp;&nbsp;onInit: function() {
									<br />
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;alert('initializing');
									<br />
									&nbsp;&nbsp;&nbsp;&nbsp;},
									<br />
									&nbsp;&nbsp;&nbsp;&nbsp;onFinish: function() {
									<br />
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;alert('finished');
									<br />
									&nbsp;&nbsp;&nbsp;&nbsp;}
									<br />
									})
								</code>
							</div>
						</div>
					</div>
				</div>

				<!--
				See: Scripts/Static/uielements.loading.progress.js for usage instructions.
				-->
			</div>
		</section>
	</div>
</div>
