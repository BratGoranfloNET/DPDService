@model EmptyViewModel

<!-- Meta -->

@{
	Layout = "~/Views/_LayoutAuth.cshtml";

	Model.PageLabel = UserResources.ResetPasswordPageLabel;
}

<!-- Page Contents -->

<div class="panel panel-sign">

	<div class="panel-title-sign mt-xl text-right">
		<h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> @Model.PageLabel</h2>
	</div>

	<div class="panel-body">

		<div class="alert alert-success">
			<strong>@UserResources.ResetPasswordSuccessLabel</strong> @UserResources.ResetPasswordSuccessMessage
		</div>

		<p class="text-center mt-lg">
			@UserResources.LoginCalloutLabel3 <a href="@Url.Action(nameof(UsersController.Login), nameof(UsersController).RemoveControllerSuffix())">@UserResources.LoginLabel</a>
		</p>

	</div>

</div>
