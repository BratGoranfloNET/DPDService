@model UserResetPasswordViewModel

<!-- Meta -->

@{
	Layout = "~/Views/_LayoutAuth.cshtml";

	Model.PageLabel = UserResources.ResetPasswordPageLabel;
}

<!-- Page Sections -->

@section page_scripts_init {

	@Scripts.Render(UserResetPasswordScriptsInit.BundleVirtualPath)

}

<!-- Page Contents -->

<div class="panel panel-sign">

	<div class="panel-title-sign mt-xl text-right">
		<h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> @Model.PageLabel</h2>
	</div>

	<div class="panel-body">

		<form id="resetPasswordForm" method="post" action="@Url.Action(nameof(UsersController.ResetPassword), nameof(UsersController).RemoveControllerSuffix())">

			@Html.AntiForgeryToken()

			@Feedback.ValidationSummary(FeedbackHelper.VisualizationMode.Panel)

			<div class="alert alert-info">
				<p class="m-none text-weight-semibold h6">@UserResources.ResetPasswordInformation</p>
			</div>

			<div class="form-group mb-none">
				<div class="input-group">
					@Html.TextBoxFor(model => model.Email, new { @tabindex = 1, @class = "form-control input-lg", @required = "required", @placeholder = Html.DisplayNameFor(model => model.Email), @autofocus = "autofocus" })
					<span class="input-group-btn">
						<button class="btn btn-primary btn-lg" type="submit">@UserResources.ResetPasswordButtonLabel</button>
					</span>
				</div>
			</div>

			<p class="text-center mt-lg">@UserResources.LoginCallOutLabel2 <a href="@Url.Action(nameof(UsersController.Login), nameof(UsersController).RemoveControllerSuffix())">@UserResources.LoginLabel</a>

		</form>

	</div>

</div>
