@model ErrorViewModel

<!-- Meta -->

@{
	Layout = "~/Views/_Layout.cshtml";

	Model.PageLabel = ErrorResources.PageLabel;
}

<!-- Page Contents -->

<section class="body-error error-outside">

	<div class="center-error">

		<div class="error-header">

			<div class="row">

				<div class="col-md-12">

					<div class="row">

						<div class="col-md-8">
							<a href="@Url.Action(nameof(HomeController.Index), nameof(HomeController).RemoveControllerSuffix())" class="logo logo-error">
								<img src="@Url.Content("~/contents/logo.png")" height="54" alt="@WebUIResources.DefaultPageTile" />
							</a>
						</div>

						<div class="col-md-4">

							@Html.Action(nameof(SearchController.BoxErrors), nameof(SearchController).RemoveControllerSuffix())

						</div>

					</div>

				</div>

			</div>

		</div>

		<div class="row">

			<div class="col-md-8">

				<div class="main-error mb-xlg">
					<h2 class="error-code text-dark text-center text-weight-semibold m-none">@Model.Code <i class="fa fa-file"></i></h2>
					<p class="error-explanation text-center">@Model.Message</p>
				</div>

			</div>

			<div class="col-md-4">

				<h4 class="text">Полезные ссылки</h4>

				<ul class="nav nav-list primary">
					<li>
						<a href="@Url.Action(nameof(HomeController.Index), nameof(HomeController).RemoveControllerSuffix())"><i class="fa fa-caret-right text-dark"></i> Главная</a>
					</li>

                    @if (User.IsInRole(Role.Admin))
                    {
					<li>
						<a href="@Url.Action(nameof(DashboardController.Index), nameof(DashboardController).RemoveControllerSuffix())"><i class="fa fa-caret-right text-dark"></i> Панель управления</a>                       
					</li>
                    }

				</ul>

			</div>

		</div>

	</div>

</section>
