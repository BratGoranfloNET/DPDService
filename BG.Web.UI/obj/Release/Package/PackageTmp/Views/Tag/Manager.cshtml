@model TagViewModel

<!-- Meta -->

@{
	var pageLabel = TagResources.PageLabel;
	var indexSectionLabel = TagResources.IndexSectionLabel;

	var headingTitle = Model.Id <= 0 ? TagResources.AddHeader : TagResources.EditHeader;
	var headingLeadInfo = Model.Id <= 0 ? TagResources.AddLeadInfo : TagResources.EditLeadInfo;

	var sectionLabel = Model.Id <= 0 ? TagResources.AddSectionLabel : TagResources.EditSectionLabel;

	Model.PageLabel = pageLabel;
	Model.SectionLabel = sectionLabel;
}

<!-- Page Sections -->

@section breadcrumb_items {
	<li><a href="@Url.Action(nameof(TagController.Index), nameof(TagController).RemoveControllerSuffix())">@indexSectionLabel</a></li>
	<li><span>@Model.SectionLabel</span></li>
}

@section page_scripts_init {
	@Scripts.Render(TagManagerScriptsInit.BundleVirtualPath)
}

<!-- Page Contents -->

<form id="termsForm" method="post" class="form-horizontal form-bordered">

	<section class="panel">

		<header class="panel-heading">
			<h2 class="panel-title">@headingTitle</h2>
			<p class="panel-subtitle">@headingLeadInfo</p>
		</header>

		<div class="panel-body">

			@Html.AntiForgeryToken()

			@Feedback.ValidationSummary(FeedbackHelper.VisualizationMode.Panel)

			@Html.HiddenFor(model => model.Id)
			@*@Html.HiddenFor(model => model.ImageBlobId, new { @id = "imageBlobIdTag" })
			@Html.HiddenFor(model => model.ImageBlobName, new { @id = "imageBlobNameTag" })*@

			@Html.Partial("Form", Model)

		</div>

		<footer class="panel-footer">
			<div class="row">
				<div class="col-md-offset-3 col-md-6 mr-none text-right">
					<a href="@Url.Action(nameof(TagController.Index), nameof(TagController).RemoveControllerSuffix())" class="btn btn-link">@ContactResources.CancelLabel</a>
					<button type="submit" class="btn btn-primary btn-lg">@ContactResources.SaveLabel</button>
				</div>
			</div>
		</footer>

	</section>

</form>

